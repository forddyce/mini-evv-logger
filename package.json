{
  "name": "evv-logger",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "dotenv -- turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "start:backend": "dotenv -- turbo run start --filter=api",
    "start:frontend": "dotenv -- turbo run dev --filter=web"
  },
  "devDependencies": {
    "dotenv-cli": "^8.0.0",
    "prettier": "^3.6.2",
    "turbo": "^2.5.4",
    "typescript": "5.8.3"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@10.13.1"
}
